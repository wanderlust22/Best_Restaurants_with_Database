@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Cuisine>;

@if (Model.Count == 0)
{
    <h1>No cuisines have been added yet!</h1>
}

<ul>
@foreach (Cuisine cuisine in Model)
{
    <h3>@Html.ActionLink($"{cuisine.Name}", "Details", new {id = cuisine.CuisineId})</h3>
}
</ul>



<h3>@Html.ActionLink("Add a cuisine!", "Create")</h3>